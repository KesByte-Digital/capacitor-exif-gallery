{
  "name": "capacitor-exif-gallery",
  "version": "0.0.3",
  "description": "Capacitor plugin for filtering and selecting images by location and time using EXIF data",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "android/gradle.properties",
    "android/proguard-rules.pro",
    "android/settings.gradle",
    "dist/",
    "ios/Sources",
    "Package.swift",
    "CapacitorExifGallery.podspec"
  ],
  "author": "Dennis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KesByte-Digital/capacitor-image-gallery.git"
  },
  "bugs": {
    "url": "https://github.com/KesByte-Digital/capacitor-image-gallery/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "gallery",
    "images",
    "photos",
    "exif",
    "gps",
    "location",
    "filtering",
    "time-based",
    "location-based",
    "photo-picker",
    "capacitor-plugin",
    "ios",
    "android"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "xcodebuild -scheme CapacitorExifGallery -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "build:ios": "bash scripts/build-ios-framework.sh",
    "build:android": "bash scripts/build-android-aar.sh",
    "build:binaries": "npm run build:ios && npm run build:android",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api ExifGalleryPlugin --output-readme README.md --output-json dist/docs.json",
    "validate:translations": "node scripts/validate-translations.js",
    "security:check": "npm audit --audit-level=moderate || true",
    "generate:samples": "npm run security:check && node scripts/generate-sample-images.js",
    "verify:samples": "node scripts/verify-exif.js",
    "build": "npm run clean && npm run validate:translations && tsc && rollup -c rollup.config.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/docgen": "^0.3.1",
    "@capacitor/ios": "^8.0.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/jest": "^30.0.0",
    "@types/polyline": "^0.1.32",
    "canvas": "3.0.0",
    "eslint": "^8.57.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "piexifjs": "1.0.6",
    "prettier": "^3.6.2",
    "prettier-plugin-java": "^2.7.7",
    "rimraf": "^6.1.0",
    "rollup": "^4.53.2",
    "swiftlint": "^2.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^8.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "dependencies": {
    "polyline": "^0.2.0"
  }
}
